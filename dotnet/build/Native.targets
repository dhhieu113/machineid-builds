<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- 
  This targets file helps ensure that native libraries are properly copied to output directories
  when building projects that reference this package.
  -->
  
  <ItemGroup>
    <!-- Copy all native files from the nuget package to the build output -->
    <Content Include="$(MSBuildThisFileDirectory)..\runtimes\**\*.dll">
      <Link>runtimes\%(RecursiveDir)%(FileName)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
    <Content Include="$(MSBuildThisFileDirectory)..\runtimes\**\*.so">
      <Link>runtimes\%(RecursiveDir)%(FileName)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
    <Content Include="$(MSBuildThisFileDirectory)..\runtimes\**\*.dylib">
      <Link>runtimes\%(RecursiveDir)%(FileName)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
</Project>
